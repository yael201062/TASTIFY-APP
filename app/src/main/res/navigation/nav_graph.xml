<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment">

    <!-- הגדרת ה-LoginFragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tastify.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <!-- פעולה להמיר את הניווט מ-loginFragment ל-homeFragment -->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- הגדרת ה-HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tastify.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
</navigation>
