<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- תוכן עליון -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- כותרת מעוצבת -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Tastify!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnPersonalArea" />

            <!-- כפתור איזור אישי -->
            <Button
                android:id="@+id/btnPersonalArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="אזור אישי"
                android:textColor="@android:color/white"
                android:backgroundTint="#3F51B5"
                android:elevation="4dp"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- תיבת חיפוש -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="חיפוש מסעדות.."
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:backgroundTint="#BDBDBD"
                android:textColorHint="#757575"
                app:layout_constraintTop_toBottomOf="@id/btnPersonalArea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSearch"
                android:layout_marginEnd="8dp" />

            <!-- כפתור חיפוש -->
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:text="חיפוש"
                android:textColor="@android:color/white"
                android:backgroundTint="#009688"
                android:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnPersonalArea" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- רשימת ביקורות בתוך NestedScrollView כדי לאפשר גלילה -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scrollContainer"
        app:layout_constraintBottom_toTopOf="@id/fabAddReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_post" />

    </androidx.core.widget.NestedScrollView>

    <!-- כפתור להוספת ביקורת -->
    <Button
        android:id="@+id/fabAddReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הוספת ביקורת חדשה"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:elevation="6dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>