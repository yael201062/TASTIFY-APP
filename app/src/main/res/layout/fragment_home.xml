<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- כותרת וכפתור באזור עליון -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome to Tastify!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/btnPersonalArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אזור אישי"
            android:textColor="@android:color/white"
            android:backgroundTint="#3F51B5"
            android:elevation="4dp"
            android:padding="10dp" />
    </LinearLayout>

    <!-- תיבת חיפוש -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="חיפוש מסעדות.."
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:backgroundTint="#BDBDBD"
        android:textColorHint="#757575"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSearch"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp" />

    <!-- כפתור חיפוש -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="חיפוש"
        android:textColor="@android:color/white"
        android:backgroundTint="#009688"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- רשימת ביקורות -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReviews"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintBottom_toTopOf="@id/fabAddReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_post" />

    <!-- כפתור להוספת ביקורת -->
    <Button
        android:id="@+id/fabAddReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הוספת ביקורת חדשה"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:elevation="6dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>